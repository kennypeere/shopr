    <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>goToZoek</from-outcome>
        <to-view-id>/zoeken.xhtml</to-view-id>
        <redirect />
    </navigation-case>
    <navigation-case>
        <from-outcome>goToToevoegen</from-outcome>
        <to-view-id>/toevoegen.xhtml</to-view-id>
        <redirect />
    </navigation-case>
    </navigation-rule>

    <application>
        <locale-config>

            <supported-locale>nl</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>Messages</base-name>
            <var>msgs</var>
        </resource-bundle>
        <!--<message-bundle>ErrorMessages</message-bundle>-->
    </application>

</faces-config>